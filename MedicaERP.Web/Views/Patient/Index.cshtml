@model MedicaERPMVC.Application.ViewModels.Patient.ListPatientsForListViewModel

@{
    ViewData["Title"] = "Pacjent";
}

<h1>Lista Pacjentów</h1>

<p>
    <a asp-action="AddPatient">Dodaj nowego pacjenta</a>
</p>
<form asp-action="Index" asp-controller="Patient" method="post">
    <div class="row">
        <input type="text" asp-for="StringToSearch" name="StringToSearch" id="StringToSearch"/>
        <input type="submit" value="Wyszukaj"/>
    </div>
    <div class="row">
    <table class="table">
    <thead>
        <tr>
            <th>
               Id
            </th>
            <th>
               Imię
            </th>
             <th>
               Nazwisko
            </th>
             <th>
              Numer telefonu
            </th>
             <th>
               Pesel
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Patients) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pesel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
               <td>
                @Html.DisplayFor(modelItem => item.Pesel)
            </td>
            <td>
                @Html.ActionLink("Edycja", "EditPatient", new { id=item.Pesel}) |
                @Html.ActionLink("Usuń użytkownika", "Delete", new { id=item.Pesel})
            </td>
        </tr>
        }
    </tbody>
</table>
</div>
<div class="row">
    <table>
        <tr>
                @for (int i = 1; i < Math.Ceiling((double)Model.Count / Model.PageSize); i++)
                {
                    <td>
                        @if(i !=Model.ActualPage)
                        {
                            <a href="javascript:PageClick(@i)">@i</a>//wywoluje funkcje js pagerclik
                        }
                        else
                        {
                            <span>@i</span>
                        }
                    </td>
                }
            </tr>
    </table>
    <input type="hidden" name="numberOfPage" id=numberOfPage />
    <input type="hidden" name="pageSize" id=pageSize value="2"/>

</div>
</form>

@section Scripts
{
    <script type="text/javascript">
    function(PagerClick(index))
    {
        document.getElementById("numberOfPage").value=index;// ukryte inputy line 85
        document.forms[0].submit();// wywyoluje formularz i wysylam zapytanie do controllera
        //formularz jest powyzej do 89lini 
    }
    </script>
}

